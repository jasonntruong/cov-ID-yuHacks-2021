<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.covid.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.covid.ui.Activitylog.Activitylog"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_activity_log" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.covid.ui.Requirements.Requirements"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_requirements" />

    <fragment
        android:id="@+id/navigation_scanner"
        android:name="com.example.covid.ui.scanner.Scanner"
        android:label="@string/title_scanner"
        tools:layout="@layout/fragment_scanner" />


</navigation>